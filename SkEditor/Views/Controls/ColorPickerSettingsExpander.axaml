<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:icons="clr-namespace:FluentIcons.Avalonia.Fluent.MarkupExtensions;assembly=FluentIcons.Avalonia.Fluent"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             x:Class="SkEditor.Views.Controls.ColorPickerSettingsExpander">

    <ui:SettingsExpander Header="{Binding ExpanderHeader}" Name="SettingsExpanderObject"
                         IconSource="{icons:SymbolIconSource Symbol=Color}">
        <ui:SettingsExpander.Footer>
            <ui:ColorPickerButton Name="ColorPicker" IsAlphaEnabled="{Binding IsAlphaEnabled}" />
        </ui:SettingsExpander.Footer>
    </ui:SettingsExpander>
</UserControl>