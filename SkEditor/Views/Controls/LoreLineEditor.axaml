<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             x:Class="SkEditor.Views.Controls.LoreLineEditor">

    <Grid Width="280" ColumnDefinitions="*,auto">
        <TextBox Name="LineTextBox" Grid.Column="0" HorizontalAlignment="Stretch" Margin="0,0,5,0" />
        <Button Name="DeleteButton" IsVisible="{Binding IsDeleteButtonVisible}" Width="30" Height="30" FontSize="18"
                Padding="0" Grid.Column="1" Margin="5,0,0,0">
            <Button.Content>
                <ui:SymbolIcon Symbol="Remove" />
            </Button.Content>
        </Button>
    </Grid>
</UserControl>