<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:fluent="clr-namespace:FluentIcons.Avalonia.Fluent;assembly=FluentIcons.Avalonia.Fluent"
             mc:Ignorable="d"
             x:CompileBindings="True"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             x:Class="SkEditor.Views.Windows.FileTypes.AssociationItemView">

    <StackPanel Orientation="Horizontal" Spacing="10" Height="64" MaxHeight="64" Margin="10">
        <Border Width="48" Height="48" CornerRadius="10" ClipToBounds="True">
            <fluent:SymbolIcon Name="Icon" FontSize="48" />
        </Border>
        <StackPanel Margin="0,10,0,0">
            <TextBlock Text="{Binding Source}" FontSize="20" FontWeight="Medium" />
            <TextBlock Width="350" Foreground="#a3ffffff" Text="{Binding Description}" FontSize="16"
                       TextTrimming="CharacterEllipsis" />
        </StackPanel>
    </StackPanel>

</UserControl>