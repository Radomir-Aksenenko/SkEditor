<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:controls="clr-namespace:SkEditor.Views.Controls"
             xmlns:vms="clr-namespace:SkEditor.ViewModels"
             xmlns:utils="clr-namespace:SkEditor.Utilities"
             xmlns:icons="clr-namespace:FluentIcons.Avalonia.Fluent.MarkupExtensions;assembly=FluentIcons.Avalonia.Fluent"
             mc:Ignorable="d" d:DesignWidth="800"
             x:CompileBindings="True"
             x:DataType="utils:AppConfig"
             DataContext="{x:Static vms:ViewModelLocator.AppConfig}"
             x:Class="SkEditor.Views.Windows.Settings.PersonalizationPage">

    <UserControl.Resources>
        <vms:SettingsViewModel x:Key="SettingsViewModel" />
    </UserControl.Resources>

    <Grid RowDefinitions="auto,*" Margin="20, 10, 20, 20">
        <controls:SettingsTitle Name="Title" Title="{DynamicResource SettingsPersonalizationTitle}" Grid.Row="0" />
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="8">
                <ui:SettingsExpander Name="ThemePageButton" Header="{DynamicResource SettingsPersonalizationTheme}"
                                     IconSource="{icons:SymbolIconSource Symbol=Color}"
                                     Description="{DynamicResource SettingsPersonalizationThemeDescription}"
                                     IsClickEnabled="True" />

                <ui:SettingsExpander Name="SyntaxPageButton" Header="{DynamicResource SettingsPersonalizationSyntax}"
                                     IconSource="{icons:SymbolIconSource Symbol=Code}"
                                     Description="{DynamicResource SettingsPersonalizationSyntaxDescription}"
                                     IsClickEnabled="True" />

                <ui:SettingsExpander Header="{DynamicResource SettingsPersonalizationFont}"
                                     IconSource="{icons:SymbolIconSource Symbol=TextFont}">
                    <ui:SettingsExpander.Description>
                        <Binding Source="{StaticResource SettingsViewModel}" Path="CurrentFont" />
                    </ui:SettingsExpander.Description>
                    <ui:SettingsExpander.Footer>
                        <Button Name="FontButton" Content="{DynamicResource SelectButton}" />
                    </ui:SettingsExpander.Footer>
                </ui:SettingsExpander>

                <ui:SettingsExpander Header="{DynamicResource SettingsPersonalizationHighlightCurrentLine}"
                                     IconSource="{icons:SymbolIconSource Symbol=Highlight}">
                    <ui:SettingsExpander.Footer>
                        <ToggleSwitch Name="HighlightCurrentLineSwitch" IsChecked="{Binding HighlightCurrentLine}" />
                    </ui:SettingsExpander.Footer>
                </ui:SettingsExpander>

                <ui:SettingsExpander Header="{DynamicResource SettingsPersonalizationSidebarAnimations}"
                                     IconSource="{icons:SymbolIconSource Symbol=SlideTransition}"
                                     Description="{DynamicResource SettingsPersonalizationSidebarAnimationsDescription}">
                    <ui:SettingsExpander.Footer>
                        <ToggleSwitch Name="SidebarAnimationsToggleSwitch"
                                      IsChecked="{Binding IsSidebarAnimationEnabled}" />
                    </ui:SettingsExpander.Footer>
                </ui:SettingsExpander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>